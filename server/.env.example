# Example environment variables for the orchestrator server
# Copy to `.env` and adjust values for your deployment.

APP_NAME=plex-watchparty-orchestrator
# Host/IP the server should bind to (use 0.0.0.0 to listen on all interfaces)
HOST=127.0.0.1
# Port the server will listen on
PORT=8000

# External passkey validation endpoint (POST {username, passkey})
PASSKEY_VALIDATION_URL=

# Enforce secure websocket (wss) connections. Set to 'true' or 'false'.
REQUIRE_WSS=true

# IRC integration (optional)
IRC_SERVER=
IRC_PORT=6667
IRC_CHANNEL=
IRC_NICK=watchparty-bot
